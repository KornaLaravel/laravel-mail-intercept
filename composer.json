{
    "name": "kirschbaum-development/mail-intercept",
    "description": "A test package for intercepting email sent from Laravel",
    "keywords": [
        "laravel",
        "symfony mailer",
        "test",
        "email"
    ],
    "homepage": "https://github.com/kirschbaum-development/mail-intercept",
    "license": "MIT",
    "authors": [
        {
            "name": "Brandon Ferens",
            "email": "brandon@kirschbaumdevelopment.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0.2|^8.1|^8.2",
        "illuminate/mail": "^9.2|^10.0|^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^7.1|^8.0|^9.0",
        "phpunit/phpunit": "^9.5.10|^10.5",
        "spatie/ray": "^1.41.1"
    },
    "autoload": {
        "psr-4": {
            "KirschbaumDevelopment\\MailIntercept\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "pint": [
            "./vendor/bin/pint"
        ],
        "pint-check": [
            "./vendor/bin/pint --test"
        ],
        "test": [
            "./vendor/bin/phpunit"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
