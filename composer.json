{
    "name": "kirschbaum-development/mail-intercept",
    "description": "A test package for intercepting email sent from Laravel",
    "keywords": [
        "laravel",
        "symfony mailer",
        "test",
        "email"
    ],
    "homepage": "https://github.com/kirschbaum-development/mail-intercept",
    "license": "MIT",
    "authors": [
        {
            "name": "Brandon Ferens",
            "email": "brandon@kirschbaumdevelopment.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "illuminate/mail": "^10.0|^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.36|^3.4",
        "phpunit/phpunit": "^10.1|^11.0",
        "spatie/ray": "^1.41.1"
    },
    "autoload": {
        "psr-4": {
            "KirschbaumDevelopment\\MailIntercept\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "pest": [
            "./vendor/bin/pest"
        ],
        "pint": [
            "./vendor/bin/pint"
        ],
        "pint-check": [
            "./vendor/bin/pint --test"
        ],
        "test": [
            "./vendor/bin/phpunit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
